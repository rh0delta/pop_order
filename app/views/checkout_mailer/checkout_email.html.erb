<h1>Checkout</h1>

<p>Test Email</p>
<% total = 0 %>
<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Type</th>
      <th>Availability</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |id, quantity| %>
      <% pop_element = PopElement.find(id) %>
      <tr>
        <td><%= pop_element.name %></td>
        <td><%= number_to_currency(pop_element.price, unit: '$') %></td>
        <td><%= pop_element.master_type %> / <%= pop_element.sub_type %></td>
        <td><%= pop_element.availability %></td>
      </tr>
      <% total += (quantity.to_i * pop_element.price) %>
    <% end %>
  </tbody>
</table>

<h3>Total: <%= number_to_currency(total, unit: '$') %></h3>
