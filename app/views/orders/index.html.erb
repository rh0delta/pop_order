<% if current_user %>
  <h1>Active Order List</h1>
  <hr>
  <table class='table table-striped table-bordered'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Order Date</th>
        <th>Ship Date</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.name %>
          </td>
          <td>
            <%= order.status %>
          </td>
          <td>
            <%= order.order_date.strftime('%B %d, %Y') %>
          </td>
          <td>
            <%= order.ship_date.strftime('%B %d, %Y') %>
          </td>
          <td>
            <%= link_to 'View Cart', cart_path(order_id: order.id) %>
          </td>
          <!-- <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path, class: 'btn btn-success' %>
<% else %>
  <script type="text/javascript">
    window.location.href="/users/sign_in"  // put your correct path in a string here
  </script>
<% end %>
